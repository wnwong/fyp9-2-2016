<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/infoCview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/pName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingTop="24dp"
                android:text="Apple iPhone 6s Plus"
                android:textColor="@color/primaryText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="HK$ 6678"
                android:textColor="@color/cardPrice"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/os"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:text="@string/os"
                    android:textColor="@color/secondaryText" />

                <TextView
                    android:id="@+id/etOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/os"
                    android:layout_marginLeft="24dp"
                    android:layout_toRightOf="@+id/os"
                    android:text="iOS 9"
                    android:textColor="@color/primaryText" />

                <TextView
                    android:id="@+id/mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/os"
                    android:paddingTop="16dp"
                    android:text="@string/mon"
                    android:textColor="@color/secondaryText" />

                <TextView
                    android:id="@+id/etMon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/mon"
                    android:layout_alignBottom="@+id/mon"
                    android:layout_alignLeft="@+id/etOS"
                    android:layout_below="@+id/etOS"
                    android:text="5.5吋"
                    android:textColor="@color/primaryText" />

                <TextView
                    android:id="@+id/camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mon"
                    android:paddingTop="16dp"
                    android:text="@string/camera"
                    android:textColor="@color/secondaryText" />

                <TextView
                    android:id="@+id/etCam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/camera"
                    android:layout_alignLeft="@+id/etOS"
                    android:layout_below="@+id/etMon"
                    android:text="1200 萬像素"
                    android:textColor="@color/primaryText" />

                <Button
                    android:id="@+id/graphBtn"
                    style="?android:borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:layout_alignBottom="@+id/avgPriceLayout"
                    android:foreground="?android:selectableItemBackground"
                    android:textStyle="bold"
                    android:textColor="#7100a1"
                    android:text="詳細圖表" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/avgPriceLayout"
                    android:layout_below="@+id/camera"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lastMonthAvg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="上月平均交易價:" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/avgPrice"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp"
                        android:text="$2600"/>

                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
