<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/itemCview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?android:dividerHorizontal"
            android:dividerPadding="8dp"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="?android:dividerVertical"
                android:dividerPadding="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:showDividers="middle">

                <ImageView
                    android:id="@+id/product_photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="10dp"
                    android:paddingTop="16dp"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="?android:dividerHorizontal"
                    android:dividerPadding="8dp"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/sellingPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:text="HK$4500"
                            android:textColor="@color/colorAccent"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/IVperson"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_below="@id/sellingPrice"
                            android:src="@mipmap/ic_person"
                            android:tint="@color/secondaryText" />

                        <TextView
                            android:id="@+id/tradePlace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/scratch"
                            android:layout_below="@+id/sellername"
                            android:layout_marginRight="8dp"
                            android:layout_toRightOf="@+id/place"
                            android:text="觀塘綫"
                            android:textColor="@color/primaryText" />

                        <ImageView
                            android:id="@+id/place"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_below="@+id/IVperson"
                            android:layout_marginTop="4dp"
                            android:src="@mipmap/ic_place"
                            android:tint="@color/secondaryText" />

                        <ImageView
                            android:id="@+id/IVcolor"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_below="@+id/place"
                            android:layout_marginTop="4dp"
                            android:src="@mipmap/ic_color"
                            android:tint="@color/secondaryText" />

                        <TextView
                            android:id="@+id/color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/scratch"
                            android:layout_below="@+id/tradePlace"
                            android:layout_toRightOf="@+id/IVcolor"
                            android:text="白色"
                            android:textColor="@color/primaryText" />

                        <TextView
                            android:id="@+id/sellername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/scratch"
                            android:layout_below="@+id/sellingPrice"
                            android:layout_marginRight="8dp"
                            android:layout_toRightOf="@+id/IVperson"
                            android:text="Peter"
                            android:textStyle="bold"
                            android:linksClickable="true"
                            android:textColor="@color/colorPrimaryDark" />

                        <TextView
                            android:id="@+id/scratchTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/IVcolor"
                            android:layout_marginTop="16dp"
                            android:text="刮花" />

                        <TextView
                            android:id="@+id/scratch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/scratchTV"
                            android:layout_below="@+id/color"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/scratchTV"
                            android:text="沒有刮花"
                            android:textColor="@color/primaryText" />

                        <TextView
                            android:id="@+id/warrantyTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/warranty"
                            android:layout_below="@+id/scratchTV"
                            android:text="保養" />


                        <TextView
                            android:id="@+id/warranty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/scratch"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="4dp"
                            android:layout_toRightOf="@+id/warrantyTV"
                            android:text="保養期內"
                            android:textColor="@color/primaryText" />


                        <TextView
                            android:id="@+id/availability"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:padding="16dp"
                            android:text="已被預訂"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="16sp"
                            android:textStyle="bold|italic" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/tradeBtn"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/warranty"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text=" 進行交易"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
