<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/itemCview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:paddingTop="16dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/sellername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/product_photo"
                android:paddingTop="24dp"
                android:text="Peter"
                android:textColor="@color/primaryText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sellingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sellername"
                android:layout_below="@+id/sellername"
                android:paddingTop="8dp"
                android:text="HK$4500"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/place"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignLeft="@+id/sellername"
                android:layout_below="@+id/sellingPrice"
                android:src="@mipmap/ic_place"
                android:tint="@color/secondaryText" />

            <TextView
                android:id="@+id/tradePlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sellingPrice"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/place"
                android:text="觀塘綫" />

            <TextView
                android:id="@+id/availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="16dp"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/tradeBtn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_photo"
                android:padding="8dp"
                android:text=" 進行交易"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
